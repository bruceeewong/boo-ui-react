{
  "name": "boo-ui-react",
  "version": "0.1.0",
  "description": "React component library",
  "author": "Bruski Wang",
  "license": "MIT",
  "keywords": [
    "React",
    "UI",
    "Component"
  ],
  "homepage": "https://github.com/bruceeewong/boo-ui-react",
  "repository": {
    "type": "git",
    "url": "https://github.com/bruceeewong/boo-ui-react"
  },
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "start": "react-scripts start",
    "storybook": "start-storybook -p 9009 -s public",
    "build": "npm run clean && npm run build-ts && npm run build-scss",
    "build-ts": "tsc -p tsconfig.build.json",
    "build-scss": "node-sass src/styles/index.scss dist/index.css",
    "build-storybook": "build-storybook -s public",
    "lint": "eslint src --ext js,ts,tsx --max-warnings 5",
    "test": "react-scripts test",
    "test:once": "cross-env CI=true react-scripts test",
    "eject": "react-scripts eject",
    "clean": "rimraf ./dist",
    "prepublish": "npm run test:once && npm run lint && npm run build"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.26",
    "@fortawesome/free-solid-svg-icons": "^5.12.0",
    "@fortawesome/react-fontawesome": "^0.1.8",
    "classnames": "^2.2.6",
    "react-transition-group": "^4.3.0"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@storybook/addon-actions": "^5.2.8",
    "@storybook/addon-info": "^5.2.8",
    "@storybook/addon-links": "^5.2.8",
    "@storybook/addons": "^5.2.8",
    "@storybook/react": "^5.2.8",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@types/classnames": "^2.2.9",
    "@types/jest": "24.0.23",
    "@types/node": "12.12.14",
    "@types/react": "^16.9.13",
    "@types/react-dom": "16.9.4",
    "@types/react-transition-group": "^4.2.3",
    "@types/storybook__addon-info": "^5.2.3",
    "babel-loader": "8.0.6",
    "cross-env": "^7.0.2",
    "husky": "^4.3.0",
    "node-sass": "^4.13.0",
    "react": "^16.12.0",
    "react-docgen-typescript-loader": "^3.6.0",
    "react-dom": "^16.12.0",
    "react-is": "^16.13.1",
    "react-scripts": "3.2.0",
    "rimraf": "^3.0.2",
    "typescript": "3.7.2"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test:once && npm run lint"
    }
  }
}
